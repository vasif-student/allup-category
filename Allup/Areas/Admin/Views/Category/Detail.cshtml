@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                @if (Model.IsMain)
                {
                    <img style="width:200px; height:200px; border-radius:50%;" src="~/assets//images/@Model.Image" />

                    <ul>
                        Children:
                        @foreach (var child in Model.Children)
                        {
                            <li>@child.Name</li>
                        }

                    </ul>
                }
            </div>
        </div>
    </div>
</div>

